{
	"compilerOptions": {
		"module": "es2015",
		"target": "es5",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2015"
		],
		"experimentalDecorators": true,
		"declaration": true,
		"inlineSources": true,
		"sourceMap": true,
		"outDir": "./dist"
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"src/public-api.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"flatModuleOutFile": "index.js",
		"genDir": "dist"
	}
}